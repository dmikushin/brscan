# /bin/sh

LISTFILE=brscan
BUILDDIR=/usr/src/rpm/RPMS/x86_64
arch=x86_64
PACK_FORMAT=rpm

VER=`cat $LISTFILE.list | grep "%version" | sed s/'%version '//g`
RELEASE_NUM=`cat $LISTFILE.list | grep %release| sed s/'%release '//g`

OS=redhat
RELEASE_DIR="linux-4.4-"$arch

rm -fR  $RELEASE_DIR/buildroot
# HACK HACK HACK make epm happy in clean phase
mkdir -p $RELEASE_DIR/BUILD

echo ""
echo Version = $VER
echo Release Number = $RELEASE_NUM
echo ""

epm -a $arch  -f $PACK_FORMAT $LISTFILE
